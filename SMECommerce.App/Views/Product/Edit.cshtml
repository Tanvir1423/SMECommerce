@model SMECommerce.App.Models.ProductModels.ProductEditVM


<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Product Create</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form method="post">
        <div class="card-body">
            <div class="form-group">
                <label for="name">Name</label>
                <input asp-for="Name" class="form-control" placeholder="Name">
                <input type="hidden" asp-for="Id" />
            </div>
            <div class="form-group">
                <label for="code">Code</label>
                <input asp-for="Code" class="form-control" placeholder="Code">
            </div>
            <div class="form-group">
                <label class="control-label">Manufacture Date:</label>
                <input asp-for="ManufactureDate" class="form-control" />
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input asp-for="Price" class="form-control" placeholder="Price">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea asp-for="Description" class="form-control" placeholder="Description"></textarea>
            </div>
            <div class="form-group">
                <label class="control-label">Category:</label>
                <select id="drpEmpList" class="form-control" asp-for="CategoryId" asp-items="@(new SelectList(Model.categoryList, "Id", "Name"))">
                    <option value="">--All--</option>
                </select>
            </div>


        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>