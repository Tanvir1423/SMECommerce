@model SMECommerce.App.Models.ProductModels.ProductDetailsVM

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Product Details</h3>
            <div class="card-tools">
                <a class="btn btn-primary" asp-action="List"><i class="fa fa-toggle-left"></i>Back</a>
            </div>
        </div>


        <div class="card-body">
            <div class="form-group">
                <span class="control-label">Code:</span>&nbsp;<span class="control-label">@Model.Code</span>
            </div>
            <div class="form-group">
                <span class="control-label">Name:</span>&nbsp;<span class="control-label">@Model.Name</span>
            </div>
            <div class="form-group">
                <span class="control-label">Manufacture Date:</span>&nbsp;<span class="control-label">@Model.ManufactureDate.ToString("dd-MM-yyyy")</span>
            </div>
            <div class="form-group">
                <span class="control-label">Category:</span>&nbsp;<span class="control-label">@Model.CategoryId</span>
            </div>


            <div class="form-group">
                <span class="control-label">Price:</span>&nbsp;<span class="control-label">@Model.Price</span>
            </div>
            <div class="form-group">
                <span class="control-label">Description:</span>&nbsp;<span class="control-label">@Model.Description</span>
            </div>
        </div>

    </div>
